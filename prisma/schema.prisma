// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id          String     @id @default(uuid())
  name        String
  type        Type
  categories  CATEGORY[]
  episode     Int        @default(0)
  thumbnail   String?
  description String?
  views       Int        @default(0)
  author      String
  season      String?
  chapters    Chapter[]
  comments    Comments[]

  creatAt  DateTime @default(now())
  updateAt DateTime @updatedAt
  Season   Season[]
}

model Chapter {
  id        String @id @default(uuid())
  name      String
  title     String
  thumbnail String
  url       String
  views     Int    @default(0)
  anime     Anime  @relation(fields: [animeId], references: [id])
  animeId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comments {
  id         String  @id @default(uuid())
  content    String
  avatar     String?
  author     String
  authorName String?
  anime      Anime   @relation(fields: [animeId], references: [id])
  animeId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id   String @id @default(uuid())
  url  String
  href String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Season {
  id        String @id @default(uuid())
  thumbnail String
  href      String
  animeId   String
  anime     Anime  @relation(fields: [animeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wishlist {
  id      String @id @default(uuid())
  animeId String
  userId  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Type {
  MOVIE
  TV_SERIES
}

enum CATEGORY {
  ACTION
  SCIENCE
  ROMANTIC
  HORROR
  MARITAL
  COMEDY
  SCHOOL
  DETECTIVE
  MUSIC
  REINCARNATION
  ADVENTURE
  EVERYDAY_LIFE
  ROBOT
}
